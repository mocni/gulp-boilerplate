#!/usr/bin/env node

var mkdirp    = require('mkdirp'),
  fs          = require('fs-extra'),
  path        = require('path'),
  pkg         = require('../package.json'),
  version     = pkg.version,
  dir         = path.dirname();

// copy gulpfile over
fs.readFile(path.join(__dirname, '../gulpfile.js'), 'utf8', function (err,data) {
  if (err) {
    return console.log(err);
  }
  write(dir, data);
});